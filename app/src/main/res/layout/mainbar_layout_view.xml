<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lidaofu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/main_barview_color"
    android:gravity="center"
    android:orientation="horizontal">

    <com.lidaofu.android.view.BarView
        android:id="@+id/bv_mainbar_one"
        android:tag="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        lidaofu:text="首页"
        lidaofu:bground_normal="@drawable/user_normal"
        lidaofu:bground_light="@drawable/user_light"
        >

    </com.lidaofu.android.view.BarView>

    <com.lidaofu.android.view.BarView
        android:id="@+id/bv_mainbar_two"
        android:tag="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        lidaofu:text="首页"
        lidaofu:bground_normal="@drawable/user_normal"
        lidaofu:bground_light="@drawable/user_light"
        >

    </com.lidaofu.android.view.BarView>

    <com.lidaofu.android.view.BarView
        android:id="@+id/bv_mainbar_three"
        android:tag="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        lidaofu:text="首页"
        lidaofu:bground_normal="@drawable/user_normal"
        lidaofu:bground_light="@drawable/user_light"
        >

    </com.lidaofu.android.view.BarView>

    <com.lidaofu.android.view.BarView
        android:id="@+id/bv_mainbar_four"
        android:tag="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        lidaofu:text="首页"
        lidaofu:bground_normal="@drawable/user_normal"
        lidaofu:bground_light="@drawable/user_light"
        >

    </com.lidaofu.android.view.BarView>
    
</LinearLayout>
